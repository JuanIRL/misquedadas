<body id="usuario">
  <div class="container-fluid usuario-container">
      <div class="row usuario-image-container">
        <div class="img rounded-circle fotoUsuario" style="background-image: url('/img/<%= usuario.imagen %>')">
          <!--<img id="userImage" class="" src="/img/<%= usuario.imagen %>" alt="<%= usuario.nombre %>" title="<%= usuario.nombre %>">-->
        </div>
      </div>
    <div class="usuario-info-container">
      <h2><%= usuario.nombre %></h2>
      <h2><%= usuario.edad %> Años</h2>
      <% var listaQuedadasAlternateTitle = "Quedadas" %>
      <% include listaQuedadas %>
    </div>
    <div class="usuario-acciones">
      <a  href="/logout" class="boton-logout"><i class="fas fa-power-off"></i></a>
      <a  href="#" class="boton-delete-usuario text-danger" onClick="eliminarUsuario() ;">Eliminar usuario</a>
    </div>
  </div>


  <% include footer %>

  <script type="text/javascript">

    function eliminarUsuario(){
      if (confirm('¿Seguro que quieres eliminar el usuario <%= usuario.nombre %>?')) {

        window.location.href = "/usuario/delete";

      }

    }

    if($('.lista-quedadas').height()/window.innerHeight < 0.29){
      $('.lista-quedadas-overlay').css('display','none')
      console.log("Hola");
    }
  </script>
